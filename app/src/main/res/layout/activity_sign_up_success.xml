<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.user.SignUpSuccessActivity">

    <ImageView
        android:id="@+id/travel_IV"
        android:layout_width="162dp"
        android:layout_height="162dp"
        android:src="@drawable/img_travel"
        android:layout_marginTop="195dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/signup_success_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pretendard_semibold"
        android:text="가입 완료!"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/travel_IV"
        app:layout_constraintStart_toStartOf="@+id/travel_IV"
        app:layout_constraintTop_toBottomOf="@+id/travel_IV" />

    <TextView
        android:id="@+id/ment_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_medium"
        android:text="이제, 나만의\n여행 상자를 열어볼까요?"
        android:textColor="@color/black"
        android:layout_marginTop="54dp"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_success_TV" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="352dp"
        android:layout_height="68dp"
        android:background="@drawable/btn_radius_4"
        android:fontFamily="@font/pretendard_regular"
        android:text="로그인"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_marginBottom="19dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>